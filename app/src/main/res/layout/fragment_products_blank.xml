<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zafar.sbusiness.fragments.Products">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            app:srcCompat="@drawable/product_blank"
            android:id="@+id/product_avatar"
            android:layout_marginTop="30dp" />

        <TextView
            android:text="Add your first product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#323232"
            android:id="@+id/text_heading" />

        <TextView
            android:text="You're just a few steps away from receiving your first order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textSize="17dp"
            android:textColor="#323232"
            android:id="@+id/text_line" />

        <Button
            android:text="ADD PRODUCT"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_and_color_button"
            android:textColor="#ffffff"
            android:id="@+id/add_product_button"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</FrameLayout>
