<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zafar.variantstesting.MainActivity">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/attribueValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-light"
        android:hint="Option name"
        android:inputType="text"
        android:paddingRight="15dp"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true" />

    <ImageButton
        android:id="@+id/addSign"
        style="?android:buttonBarButtonStyle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:src="@drawable/addsign"
        android:layout_alignTop="@+id/attribueValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/variantsHints"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@+id/attribueValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <info.hoang8f.widget.FButton
        android:id="@+id/addVariant"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="68dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</RelativeLayout>
