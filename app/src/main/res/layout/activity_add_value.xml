<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zafar.variantstesting.AddValue">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/attribueValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:hint="Option Value"
        android:inputType="text"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        app:met_floatingLabel="highlight"
        app:met_singleLineEllipsis="true"
        android:layout_below="@+id/add"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/addSign"
        style="?android:buttonBarButtonStyle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:src="@drawable/addsign"
        android:layout_alignTop="@+id/attribueValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/valueList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/attribueValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
